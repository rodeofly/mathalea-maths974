{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },

  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-undef": "error",
    "no-debugger": "warn",
    "no-unused-expressions": "warn",
    "no-console": "warn"
  },
  "extends": ["eslint:recommended"]
}
